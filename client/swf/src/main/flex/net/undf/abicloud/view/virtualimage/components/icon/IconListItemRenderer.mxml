<mx:Canvas 
    width="65" height="65"
    verticalScrollPolicy="off" horizontalScrollPolicy="off"
    xmlns:mx="http://www.adobe.com/2006/mxml"
    xmlns:utils="net.undf.abicloud.utils.*">


    <mx:Script>
        <![CDATA[
            import net.undf.abicloud.business.managers.virtualimage.VirtualImageManager;
        ]]>
    </mx:Script>

    <utils:ImageDefault id="iconImage"
        width="90%" height="90%"
        horizontalCenter="0"
        verticalCenter="0"
        source="{data.path}" toolTip="{data.name}"
        scaleContent="true"
        defaultImagePath="{VirtualImageManager.DEFAULT_ICON_IMAGE_PATH}"/>
</mx:Canvas>
